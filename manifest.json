      "purpose": "any maskable"
    },
    {
      "src": "./icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "categories": ["education", "music", "productivity"],

  "screenshots": [
    {
      "src": "./screenshots/home-540.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "./screenshots/training-540.png",
      "sizes": "540x720",
